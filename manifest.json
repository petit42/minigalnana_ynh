{
  "name": "MinigalNano",
  "id": "minigalnano",
  "description": {
    "en": "Open Source Gallery",
    "fr": "Galerie Open Source"
  },
  "license": "AGPL-3",
  "developer": {
    "name": "petit",
    "email": "petit@peccadilles.net",
    "url": "https://github.com/petit42/minigalnano_ynh"
  },
  "multi_instance": "true",
  "arguments": {
    "install" : [
      {
        "name": "domain",
        "type": "domain",
        "ask": {
            "en": "Choose a domain for MinigalNano",
            "fr": "Choisissez un domaine pour MinigalNano"
        },
        "example": "domain.org"
      },
      {
        "name": "path",
        "type": "path",
        "ask": {
            "en": "Choose a path for MinagalNano",
            "fr": "Choissez un chemin pour MinigalNano"
        },
        "example": "/gallery",
        "default": "/gallery"
      }
    ]
  }
}
